@{
    ViewData["Title"] = "Get in touch!";
}
<div class="contact">
    <h1>Get in touch!</h1>

    <div class="row">
        <div class="col-sm-4 col-xs-4">
            <a href="mailto:hello@thomasbandt.com"
               onclick="trackOutboundLink(this.href)"
               title="Drop me a line."><img src="/images/mail.png"></a><br>
            <span class="caption">
                Drop me a line.
            </span>
        </div>
        <div class="col-sm-4 col-xs-4">
            <a href="https://twitter.com/asp_net"
               onclick="trackOutboundLink(this.href)"
               title="Follow me on Twitter."
               target="_blank"><img src="/images/twitter.png"></a><br>
            <span class="caption">
                Follow me on Twitter.
            </span>
        </div>
        <div class="col-sm-4 col-xs-4">
            <a href="https://github.com/aspnetde"
               onclick="trackOutboundLink(this.href)"
               title="Find my Open Source Projects on GitHub."
               target="_blank"><img src="/images/github.png"></a><br>
            <span class="caption">
                Find some code on GitHub.
            </span>
        </div>
    </div>

    <div class="jumbotron">
        <p><em>Last but not least &mdash; German Efficiency:</em>
            <a asp-controller="Contact" asp-action="Imprint">Imprint</a>,
            <a asp-controller="Contact" asp-action="Privacy">Privacy Statement</a>.</p>
    </div>
</div>
