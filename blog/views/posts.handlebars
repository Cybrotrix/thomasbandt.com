{{#each posts}}
<article class="preview">
    <h2><a href="{{postLink this.slug}}">{{this.title}}</a></h2>
    <p>{{this.abstract}}</p>
</article>
{{/each}}

{{#if hasPreviousPage}}
<a href="{{previousPageUrl}}">Previous Page</a>
{{/if}}
{{#if hasNextPage}}
<a href="{{nextPageUrl}}">Next Page</a>
{{/if}}

{{#section "pageTitle"}}{{blog.name}}{{/section}}
{{#section "metaTags"}}<meta name="description" content="{{blog.description}}">{{/section}}
