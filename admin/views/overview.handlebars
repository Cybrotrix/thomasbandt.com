{{#if message}}
    <div class="alert alert-success">
        <span class="glyphicon glyphicon-thumbs-up"></span> {{message}}
    </div>
{{/if}}

<table class="table table-hover">
{{#each posts}}
    <tr>
        <td style="width: 70%">{{this.title}}</td>
        <td><span am-time-ago="'{{this.date}}'"></span></td>
        <td>{{this.published}}</td>
    </tr>
{{/each}}
</table>